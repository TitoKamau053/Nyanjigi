{
  "name": "nyanjigi-water-management-api",
  "version": "1.0.0",
  "description": "Water Management System API with Jenga STK Push Integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "migrate": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:reset": "node scripts/migrate.js reset",
    "migrate:fresh": "node scripts/migrate.js fresh",
    "migrate:seed": "node scripts/migrate.js seed",
    "migrate:status": "node scripts/migrate.js status",
    "system:start": "node scripts/start.js",
    "system:health": "curl http://localhost:5000/api/v1/health",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "echo 'No build step required for Node.js API'",
    "deploy": "npm run migrate && npm start",
    "backup": "mysqldump -u $DB_USER -p$DB_PASSWORD $DB_NAME > backup_$(date +%Y%m%d_%H%M%S).sql",
    "logs": "tail -f logs/app.log",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop nyanjigi-api",
    "pm2:restart": "pm2 restart nyanjigi-api",
    "pm2:logs": "pm2 logs nyanjigi-api"
  },
  "dependencies": {
    "africastalking": "^0.7.7",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "eslint-config-node": "^4.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "water-management",
    "billing-system",
    "jenga-api",
    "stk-push",
    "nodejs",
    "express",
    "mysql",
    "rest-api",
    "automated-billing",
    "payment-processing"
  ],
  "author": {
    "name": "Nyanjigi Waters",
    "email": "info@nyanjigi.co.ke"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nyanjigi/water-management-api.git"
  },
  "bugs": {
    "url": "https://github.com/nyanjigi/water-management-api/issues"
  },
  "homepage": "https://github.com/nyanjigi/water-management-api#readme"
}
